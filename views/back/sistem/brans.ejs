<% layout("../layout") %>

<section class="panel col-md-6">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
            <!-- <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a> -->
        </div>

        <h2 class="panel-title">BRANŞ EKLE</h2>
    </header>
    <div class="panel-body">
        <form action="/admin/brans/insert" method="POST">
            <div class="form-group col-md-9">
                <input type="text" name="title" class="form-control" placeholder="Branş giriniz . . .">
            </div>
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-success pull-right">Ekle</button>
            </div>
        </form>
    </div>
</section>

<section class="panel col-md-6">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
            <!-- <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a> -->
        </div>

        <h2 class="panel-title">BRANŞLAR</h2>
    </header>
    <div class="panel-body">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>BRANŞ</th>
                    <th style="color:white"> - - - </th>
                </tr>
            </thead>
            <tbody>
                <% brans.forEach(element => { %>
                <tr>
                    <td><%= element.title %> </td>
                    <td><a class="btn btn-danger btn-sm pull-right" href="/admin/brans/delete/<%= element._id %>">SİL</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</section>